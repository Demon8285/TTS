@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/FormStyle.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<form class="box" id="account" method="post">
    <h1>Авторизація</h1>
    <div class="input-box">
        <input type="email" asp-for="Input.Email" required placeholder="Введіть емейл" />
    </div>
    <div class="input-box">
        <input type="password" asp-for="Input.Password" required placeholder="Введіть пароль"/>
    </div>
    <div class="checkbox">
        <label asp-for="Input.RememberMe">
            <input asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <div class="input-box">
        <input type="submit" value="Авторизуваться" />
    </div>
    <p>
        <a style="color:white" id="forgot-password" asp-page="./ForgotPassword">Забули пароль?</a>
    </p>
    <p>
        <a style="color:white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зареєструваться</a>
    </p>
    @*<p>
        <a style="color:white" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
    </p>*@
</form>
<div class="errors_box" asp-validation-summary="All">
    <div class="error_header">
        <input type="button" id="button_close" value="Закрити" />
    </div>
</div>
<script src="~/js/FormScript.js" type="text/javascript"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
