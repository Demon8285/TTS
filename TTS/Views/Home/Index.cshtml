@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/FormStyle.css" rel="stylesheet"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<form class="box" asp-controller="Acc">
    <h1>Авторизація</h1>
    <div class="input-box">
        <input type="email" placeholder="Email" required/>
        @*<img src="~/951297924cc274baf5ab31aab8cd42f1.svg"/*@
    </div>
    <div class="input-box">
        <input type="password" placeholder="Пароль" required/>
    </div>
    <div class="input-box">
        <input type="submit" value="Авторизуваться" />
    </div>
    <p>Forgot password?</p>
</form>
<div class="errors_box">
    <div class="error_header">
        <input type="button" id="button_close" value="Закрити" />
    </div>
</div>
<script src="~/js/FormScript.js" type="text/javascript"></script>